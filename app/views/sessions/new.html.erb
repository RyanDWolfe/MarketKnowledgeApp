<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div><%= f.label :email, "Select your email" %><br>
  <%= f.collection_select(:email, @users, :email, :email) %>
</div>

  <div>
    <%= f.label :password, "Your password:" %><br>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>
<% end %>
